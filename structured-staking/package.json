{
  "name": "structured-staking",
  "description": "A Structured Staking subproject related to the Bridge Tower project",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "compile": "npx hardhat clean && npx hardhat compile",
    "deploy": "npx hardhat run --network avalanche scripts/deploy.ts",
    "deploy:testnet": "npx hardhat run --network fuji scripts/deploy.ts",
    "deploy:sandbox": "npx hardhat run --network localhost scripts/deploy.ts",
    "verify": "npx hardhat run scripts/verify.ts --network mainnet",
    "verify:testnet": "npx hardhat run scripts/verify.ts --network fuji",
    "launch-pool": "npx hardhat run --network avalanche scripts/launchPool.ts",
    "launch-pool:testnet": "npx hardhat run --network fuji scripts/launchPool.ts",
    "launch-pool:sandbox": "npx hardhat run --network localhost scripts/launchPool.ts",
    "finalize-pool": "npx hardhat run --network avalanche scripts/finalizePool.ts",
    "finalize-pool:testnet": "npx hardhat run --network fuji scripts/finalizePool.ts",
    "finalize-pool:sandbox": "npx hardhat run --network localhost scripts/finalizePool.ts",
    "start-sandbox": "npx hardhat node",
    "coverage": "npx hardhat coverage",
    "size": "npx hardhat size-contracts --no-compile",
    "test": "npx hardhat test --bail"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.4.7",
    "@ethersproject/providers": "^5.4.7",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.3",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.6",
    "@nomicfoundation/hardhat-toolbox": "^1.0.1",
    "@nomiclabs/hardhat-ethers": "^2.1.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.7.3",
    "@openzeppelin/contracts-upgradeable": "^4.7.3",
    "@openzeppelin/hardhat-upgrades": "^1.20.0",
    "@openzeppelin/test-helpers": "^0.5.16",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": ">=12.0.0",
    "chai": "^4.2.0",
    "dotenv": "^16.0.2",
    "ethers": "^5.4.7",
    "hardhat": "^2.11.0",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.7.21",
    "ts-node": ">=8.0.0",
    "typechain": "^8.1.0",
    "typechain-target-ethers-v5": "^5.0.1",
    "typescript": ">=4.5.0"
  }
}
