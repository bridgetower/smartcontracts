{
  "name": "bridge-tower-marketplace",
  "version": "1.0.0",
  "description": "A marketplace for NFTs related to the Bridge Tower project",
  "scripts": {
    "compile": "npx hardhat clean && npx hardhat compile",
    "deploy": "npx hardhat run --network avalanche scripts/deploy.ts",
    "deploy:testnet": "npx hardhat run --network avalanche_testnet scripts/deploy.ts",
    "deploy:sandbox": "npx hardhat run --network localhost scripts/deploy.ts",
    "verify": "npx hardhat run scripts/verify.ts --network avalanche",
    "verify:testnet": "npx hardhat run scripts/verify.ts --network avalanche_testnet",
    "create-collection": "npx hardhat run --network avalanche scripts/createCollection.ts",
    "create-collection:testnet": "npx hardhat run --network avalanche_testnet scripts/createCollection.ts",
    "create-collection:sandbox": "npx hardhat run --network localhost scripts/createCollection.ts",
    "mint": "npx hardhat run --network avalanche scripts/mint.ts",
    "mint:testnet": "npx hardhat run --network avalanche_testnet scripts/mint.ts",
    "mint:sandbox": "npx hardhat run --network localhost scripts/mint.ts",
    "start-sandbox": "npx hardhat node",
    "coverage": "npx hardhat coverage",
    "docgen": "npx hardhat docgen",
    "size": "npx hardhat size-contracts --no-compile",
    "test": "npx hardhat test --bail"
  },
  "dependencies": {
    "@ethersproject/keccak256": "^5.6.1",
    "@ethersproject/strings": "^5.6.1",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.3",
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@openzeppelin/contracts": "^4.6.0",
    "@openzeppelin/contracts-upgradeable": "^4.6.0",
    "@openzeppelin/hardhat-upgrades": "^1.17.0",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^12.20.52",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.3.6",
    "dotenv": "^16.0.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "ethers": "5.6.6",
    "hardhat": "^2.9.5",
    "hardhat-contract-sizer": "^2.5.1",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "rimraf": "^3.0.2",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "solidity-docgen": "^0.6.0-beta.10",
    "ts-node": "^10.7.0",
    "typechain": "^5.2.0",
    "typescript": "^4.6.4",
    "web3": "^1.7.3"
  },
  "license": "MIT"
}
